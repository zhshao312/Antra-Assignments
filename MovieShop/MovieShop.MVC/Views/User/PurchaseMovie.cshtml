@inject ICurrentUserService CurrentUserService
@using ApplicationCore.ServiceInterfaces
@model ApplicationCore.Models.Request.PurchaseMovieRequestModel


<form method="post" asp-controller="User" asp-action="PurchasesMovieAction">
    <div class="card mb-3 container shadow ">
        <div class="row justify-content-md-center">
            <div class="col-md-4">
            <img src="@ViewBag.Movie.PosterUrl" alt="@ViewBag.Movie.Title" class="card-img-top">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5>Order Summary</h5>
                <hr />
                <div class="row">
                    <div class="col-md-6 h5">
                        @ViewBag.Movie.Title
                    </div>
                    <div class="col-md-6 h5">
                        $@ViewBag.Movie.Price
                    </div>

                    <input type="hidden" asp-for="UserId" value="@CurrentUserService.UserId" class="form-control" />
                    <input type="hidden" asp-for="TotalPrice" value="@ViewBag.Movie.Price" class="form-control" />
                    <input type="hidden" asp-for="MovieId" value="@ViewBag.Movie.Id" class="form-control" />

                    <div class="col-12">
                        <input type="submit" value="Confirm Purchase" class="btn btn-primary btn-lg btn-block" />
                    </div>
                </div>

                </div>
            </div>
        </div>
    </div>
</form>
