@using System.Globalization
@using ApplicationCore.ServiceInterfaces
@model ApplicationCore.Models.Response.MovieDetailsResponseModel

<div class="card bg-dark text-white">
    <img src="@Model.BackdropUrl" class="card-img" style="background-color: midnightblue; opacity: .4;" alt="@Model.Title" />
    <div class="card-img-overlay">
        <div class="row">
            <div class="col-md-3 offset-2">

                <!-- Movie Card row -->
                <div>
                    <img src="@Model.PosterUrl" class="card-img-top" />
                </div>

            </div>
            <div class="col-md-4">
                <div class="row mt-2">
                    <div class="col-12">
                        <h1 class="text-white">
                            @Model.Title
                        </h1>
                        <small class="text-white"> @Model.Tagline </small>
                    </div>

                </div>

                <div class="row">
                    <div class="col-4 text-secondary font-weight-bold mt-1 ">
                        <p>@Model.RunTime m | @Model.ReleaseDate.Value.Date.Year</p>
                    </div>
                    <div class="col-8">
                        @foreach (var genre in Model.Genres)
                        {
                            <a class="badge badge-pill badge-dark ml-1" asp-route-id="@genre.Id">
                                @genre.Name
                            </a>}
                    </div>
                </div>

                <div class="row">
                    <div class="col-4 mt-3">
                        <h4>
                            <span class="badge badge-warning">
                                @Model.Rating?.ToString("0.00")
                            </span>
                        </h4>
                    </div>
                </div>

                <div class="row">
                    <div class="col-12 text-light mt-2">
                        @Model.Overview
                    </div>
                </div>
            </div>

            <div class="col-md-2 mt-4 offset-1">
                <ul class="list-group">
                    <li class="list-group-item">

                    </li>
                    <li class="list-group-item">
                        <button type="button"
                                class="btn btn-outline-light btn-lg btn-block btn-sm">
                            <i class="far fa-edit mr-1"></i>
                            REVIEW
                        </button>
                    </li>
                    <li class="list-group-item">
                        <button type="button"
                                class="btn btn-outline-light btn-lg btn-block btn-sm">
                            <i class="fas fa-play mr-1"></i> TRAILER
                        </button>
                    </li>

                    <li class="list-group-item">
                        <a class="btn btn-light btn-lg btn-block btn-sm" asp-route-id="@Model.Id">
                            BUY @Model.Price
                        </a>

                        <a class="btn btn-light btn-lg btn-block btn-sm" asp-route-id="@Model.Id">
                            WATCH MOVIE
                        </a>
                    </li>
                </ul>
            </div>

        </div>
    </div>

</div>

<div class="row mt-4">
    <div class="col-4 moviefacts">
        <h5>MOVIE FACTS</h5>
        <hr>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">
                <i class="far fa-calendar-alt mr-2"></i>Release Date
                <span class="badge badge-pill badge-dark">@Model.ReleaseDate.Value.ToShortDateString()</span>
            </li>

            <li class="list-group-item">
                <i class="fas fa-hourglass-half mr-2"></i>Run Time
                <span class="badge badge-pill badge-dark">@Model.RunTime.Value m</span>
            </li>
            <li class="list-group-item">
                <i class="far fa-money-bill-alt"></i> Box Office
                <span class="badge badge-pill badge-pill badge-dark">
                    @NumberFormatInfo.CurrentInfo.CurrencySymbol
                    @Model.Revenue?.ToString("C0")
                </span>
            </li>

            <li class="list-group-item">
                <i class="fas fa-dollar-sign mr-2"></i> Budget
                <span class="badge badge-pill badge-dark">
                    @NumberFormatInfo.CurrentInfo.CurrencySymbol
                    @Model.Budget?.ToString("C0")
                </span>
            </li>

            <li class="list-group-item">
                <i class="fab fa-imdb"></i>

                <a href="@Model.ImdbUrl"
                   class="text-dark ml-3"
                   target="_blank">
                    <i class="fas fa-share-square mr-2"></i>
                </a>
            </li>

        </ul>
    </div>

    <div class="col-4 offset-1">
        <h5>CAST</h5>

        <table class="table">
            <tbody>
                @foreach (var cast in Model?.Casts)
                {
                    <tr>
                        <td>
                            <img src="@cast.ProfilePath"
                                 class="rounded-circle"
                                 style="width:35px; height: 50px;"
                                 alt="@cast.Name" />
                        </td>
                        <td> @cast.Name </td>
                        <td> @cast.Character</td>
                    </tr>

                }


            </tbody>
        </table>

    </div>
</div>


<div>
    <a asp-action="RedirectHome">Back to Home</a>
</div>